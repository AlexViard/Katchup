<div class="container align-items-center row mx-auto" style="margin-top: 100px; align-content:center;" >
  <div style="vertical-align: middle;">
  <a href="<%= admin_root_path %>" class=" pull-left btn btn-danger btn-just-icon">
    <i class="fas fa-arrow-left fa-2x"></i>
  </a>
  </div>
  <div class="card mx-auto" style="width: 20rem;">
  <div class="card-body">
    <p><i class="fab fa-cc-visa fa-3x mx-3"></i>Items actuel : <%= @orders.count %></p>
  </div>
</div>
<div class="align-text">
<a href="<%= admin_orders_path %>" class=" pull-right btn btn-success btn-round">
  <i class="fas fa-paw fa-2x mr-2"></i> Nouvel Order
</a>
</div>
</div>
<br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ID</th>
      <th scope="col">Date de creation</th>
      <th scope="col">User ID</th>
      <th scope="col">Item ID</th>
    </tr>
  </thead>
  <tbody>

<%  @orders.each_with_index do |t,index| %>
    <tr>
      <th scope="row"><% index %></th>
      <td><%= t.id %></td>
      <td><%= t.created_at %></td>
      <td><%= t.user_id %></td>
      <td><%= t.item_id %></td>
    </tr>
    <% end %>
  </tbody>
</table>
