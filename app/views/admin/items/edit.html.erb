          <%= text_field_tag 'title', @item.title, class: "form-control" %>
          <br /> <br />
          <%= label_tag 'Description' %>
          <%= text_field_tag 'descript', @item.descript, class: "form-control" %>
          <br /> <br />
          <%= label_tag 'Prix (â‚¬)' %>
          <%= text_field_tag 'price', @item.price, class: "form-control" %>
          <br /> <br />
          <center><%= submit_tag "Modifier l'item", class:"btn btn-outline-primary" %></center>
          <% end %>

        </div>
      </div>
    </div>
