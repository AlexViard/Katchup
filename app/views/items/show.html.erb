<!DOCTYPE html>
<html>



	<body>

			<div class="jumbotron jumbotron-fluid" style="background-image:url('<%=@item.image_url%>'); background-repeat:no-repeat; background-size:cover; background-position:center;  height:24rem;">

			 	<div class="container ">
			    <h1 class="display-4" style="color:white; font-weight:bold; font-size:68px; margin-top:6rem;"><%= @item.title %></h1>
			    <p class="lead" style="color:white; font-weight:bold; font-size:28px;">C'est le plus Miaw-gnon de tous les kat !</p>
			  </div>

			</div>


			<div class="row justify-content-center" style="margin-top:2.4rem;  padding-bottom:120px;">
				<div class="card">

					<div class="card-body  container row">

						<div class="col-4">

							<img src="<%= @item.image_url %>" class="card card-body" style="border-radius:10px;" >

						</div>

						<div class="col">

							<h2 class="card-title" style="padding-top:20px;"><%=@item.title%></h2>
							<hr>
							<p class="card-text"><small>Prix : <%=@item.price%>€</small></p>
							<i class="fas fa-search-plus " id="show-more" data-remote="true" style="color:#6DD3D6;"></i><br><br>
							<div id="informations" class="collapse ">
							<p class="card-text"><strong>Description :</strong> <%=@item.descript%></p>
							</div>
							<% if user_signed_in? %>
								<%= link_to "Ajouter au panier", user_carts_path(user_id:current_user.id, item_id:@item.id),  method: :post, class:"btn btn-outline-primary" %>
							<%end%>
							<%= link_to "Retour à la liste des articles", root_path(anchor: "ajout_recent"), class:"btn btn-outline-danger", style:"opacity:70%;" %>
							<br><br>
							<p> <span class="badge badge-primary"> <%=@cart.where(item_id:@item.id).count%> </span> Ils nous ont fait confiance ♡ </p>

						</div>


					</div>
				</div>
			</div>





	</body>

	<script>
		console.log("coucou")

		var info = document.getElementById("informations");
		var btn = document.getElementById("show-more");

		console.log(info)
		console.log(btn)

		function Click() {
		  info.classList.toggle("collapse");
		}

		btn.addEventListener("click",Click);


	</script>
</html>
